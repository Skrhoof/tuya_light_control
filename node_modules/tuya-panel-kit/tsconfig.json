{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "sourceMap": true,
    // "skipLibCheck": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "baseUrl": ".",
    "typeRoots": ["@types/*.d.ts"],
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*, @types/**/*"],
  "exclude": ["./node_modules/@types/"]
}
